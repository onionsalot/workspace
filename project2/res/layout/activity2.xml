    android:layout_height="match_parent">
	<TextView
	    android:id="@+id/title2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Activity 2"></TextView>

	<TextView
	    android:id="@+id/text2"
	    android:layout_below="@id/title2"
